#!/bin/sh

echo "üîç Scanning remote branches..."

# Get all remote branches and track them
git branch -r | grep -v '\->' | sed "s,\x1B\[[0-9;]*[a-zA-Z],,g" | while read remote; do 
    echo "üìç Setting up tracking for branch: ${remote#origin/}"
    git branch --track "${remote#origin/}" "$remote" 2>/dev/null || echo "   ‚ÑπÔ∏è  Branch already exists"
done

echo "\nüì• Fetching all remote branches..."
# Fetch all remote branches
git fetch --all

echo "\n‚¨áÔ∏è  Pulling updates from all branches..."
# Pull all remote branches
git pull --all

echo "\n‚úÖ All done! Your repository is now synchronized with remote."